<%= turbo_frame_tag dom_id(tweet) do %>
  <div  class="tweet-card">
    <%= tweet.body %>
    <br>
    <%= button_to "likes (#{tweet.likes || 0})", tweet_path(tweet, like: true), method: :put, style: "display: inline; float:left" %>

    <%= link_to :edit, edit_tweet_path(tweet), class: "edit-tweet" %>

  </div>
  <br>
<% end %>